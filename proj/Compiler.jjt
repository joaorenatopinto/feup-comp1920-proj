void Start() 
// #void
 : {/* System.out.println("Start\n"); */}
{
    ImportDeclaration() ClassDeclaration() <EOF> 
    // #File(2)
}

void ImportDeclaration() 
// void
 : {/* System.out.println("ImportDeclaration\n"); */}
{
    ( "import" ["static"] <IDENTIFIER> [ "." <IDENTIFIER> "(" [ ( Type() | "void" ) ( "," ( Type() | "void" )  )* ] ")" [ Type() | "void" ] ] ";" )*//feito para passar no exemplo dos stores apenas. corrigir depois
}

void ClassDeclaration() 
// #void
 : {/* System.out.println("ClassDeclaration\n"); */}
{
    "class" <IDENTIFIER> [ "extends" <IDENTIFIER> ] "{" ( VarDeclaration() )* ( MethodDeclaration() )* "}"
}

void VarDeclaration() 
// #void
 : {/* System.out.println("VarDeclaration\n"); */}
{
    Type() <IDENTIFIER> ";"
}

void MethodDeclaration() 
// #void
 : {/* System.out.println("MethodDeclaration\n"); */}
{
    "public" Type() <IDENTIFIER> "(" [ Type() <IDENTIFIER> ( "," Type() <IDENTIFIER> )* ] ")" "{" ( VarDeclaration() )* ( Statement() )* "return" Expression() ";" "}"
    | "public" "static" "void" "main" "("  "String" "[" "]" <IDENTIFIER> ")" "{" ( VarDeclaration() )* ( Statement() )* "}"
}

void Type() 
// #void
 : {/* System.out.println("Type\n"); */}
{
    "int" "[" "]"
    | "boolean"
    | "int"
    | <IDENTIFIER>
}

void Statement() 
// #void
 : {/* System.out.println("Statement\n"); */}
{
    "{" ( Statement() )* "}"
    | "if" "(" Expression() ")" Statement() "else" Statement()
    //  #IfElse(2)
    | "while" "("Expression() ")" Statement() 
    // #While
    | <IDENTIFIER> "[" Expression() "]" "=" Expression() ";" 
    // #Assign
    | <IDENTIFIER> "=" Expression() ";" 
    // #Assign
    | Expression() ";"  
}

void Expression() 
// #void
 : {/* System.out.println("Expression\n"); */}
{
    <INTEGER> [Express()]
    | "true" [Express()]
    | "false" [Express()]
    | <IDENTIFIER> [Express()]
    | "this" [Express()]
    | "new" "int" "[" Expression() "]" [Express()]
    | "new" <IDENTIFIER> "(" ")" [Express()]
    | "!" Expression() [Express()]
    | "(" Expression() ")" [Express()]
}

void Express() 
// #void 
: {/* System.out.println("Express\n"); */}
{
    ( "&&" | "<" | "+" | "-" | "*" | "/" ) Expression() [Express()]
    | "[" Expression() "]" [Express()]
    | "." "length" [Express()] /* OPTIMIZAO CARALHOOOOO  */
    | "." <IDENTIFIER> "(" [ Expression() ( "," Expression() )* ] ")" [Express()]
}